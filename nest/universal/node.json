{
  "name": "Node.js Universal",
  "description": "Universal nest egg for Node.js applications.",
  "images": [
    "quay.io\/yajtpg\/pterodactyl-images:nodejs-7",
    "quay.io\/yajtpg\/pterodactyl-images:nodejs-8",
    "quay.io\/yajtpg\/pterodactyl-images:nodejs-9",
    "quay.io\/yajtpg\/pterodactyl-images:nodejs-10",
    "quay.io\/yajtpg\/pterodactyl-images:nodejs-11",
    "quay.io\/yajtpg\/pterodactyl-images:nodejs-12",
    "quay.io\/yajtpg\/pterodactyl-images:nodejs-13",
    "quay.io\/yajtpg\/pterodactyl-images:nodejs-14",
    "quay.io\/yajtpg\/pterodactyl-images:nodejs-15",
    "quay.io\/yajtpg\/pterodactyl-images:nodejs-16"
  ],
  "startup": "\/start.sh",
  "config": {
    "files": {},
    "startup": {
      "done": ""
    },
    "logs": {
      "custom": true,
      "location": "logs/latest.log"
    },
    "stop": "^C"
  },
  "scripts": {
    "installation": {
      "script": null,
      "container": "alpine:3.4",
      "entrypoint": "ash"
    }
  },
  "variables": [
    {
      "name": "Install Command(s)",
      "description": "Commands to run the configuration of the application. All the commands required for installation should be defined here.",
      "env_variable": "STARTUP_CMD",
      "default_value": "npm install --save --production",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|string|max:512"
    },
    {
      "name": "Launch Command(s)",
      "description": "Commands to run the application. Just the command(s) required to start the service should be defined here.",
      "env_variable": "SECOND_CMD",
      "default_value": "node .",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|string|max:256"
    }
  ]
}
